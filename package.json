{
  "name": "rxlize",
  "version": "0.4.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "es2015": "./dist/esm/index.js",
  "browser": "./dist/browser/rxlize.js",
  "types": "./dist/types/index.d.ts",
  "author": "t7yang <t7yang@gmail.com>",
  "license": "MIT",
  "sideEffect": false,
  "keywords": [
    "rxlize",
    "rxjs",
    "angular",
    "state"
  ],
  "homepage": "https://github.com/t7yang/rxlize",
  "repository": {
    "type": "git",
    "url": "https://github.com/t7yang/rxlize"
  },
  "bugs": {
    "url": "https://github.com/t7yang/rxlize/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "update": "yarn upgrade-interactive",
    "lint": "eslint src/** --ext .ts --fix",
    "format": "prettier --write . --ignore-unknown",
    "clear": "rm -fr ./dist",
    "test:tsc": "tsc --noEmit --incremental false",
    "build:type": "tsc --emitDeclarationOnly",
    "build": "yarn clear && rollup -c && yarn build:type"
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint",
      "git add"
    ],
    "*": [
      "yarn format",
      "git add"
    ]
  },
  "files": [
    "dist/*",
    "!*.tsbuildinfo"
  ],
  "peerDependencies": {
    "@angular/core": ">=8.0.0",
    "rxjs": ">=6.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@babel/runtime-corejs3": "^7.12.5"
  },
  "devDependencies": {
    "@angular/core": "^12.1.1",
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.36.2",
    "rollup-plugin-exclude-dependencies-from-bundle": "^1.1.14",
    "rollup-plugin-terser": "^7.0.2",
    "rxjs": "^6.6.2",
    "typescript": "^4.1.2"
  }
}
